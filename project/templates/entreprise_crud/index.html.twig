{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
            
                <th>Email</th>
                <th>Nom</th>
              
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
              
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.nom }}</td>
               
                <td>
                    <a href="{{ path('profil.entreprise', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('app_entreprise_crud_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="nouvelle.entreprise">Creation nouvelle entreprise</a>
{% endblock %}
