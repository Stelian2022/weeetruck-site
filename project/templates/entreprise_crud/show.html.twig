{% extends 'base.html.twig' %}

{% block title %}Entreprise
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('./assets/css/dashbord.css') }}">
	<div class="user">
		<h1>Entreprise {{ app.user.nom }}</h1>
	</div>
	<div class="button">
		<a href="{{ path('entreprise') }}">Retour au tableau de bord</a>
	</div>

	<table class="table">
		<tbody>

			<tr>
				<th>Email</th>
				<td>{{ entreprise.email }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ entreprise.nom }}</td>
			</tr>


		</tbody>
	</table>


	<div class="button">
		<a href="{{ path('app_entreprise_crud_edit', {'id': entreprise.id}) }}">Modifier</a>
	</div>
	{# {{ include('entreprise_crud/_delete_form.html.twig') }} #}
{% endblock %}
